{
  "name": "blog-builder",
  "license": "MIT",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint . --fix && prettier -w . && cd contracts && npm run lint",
    "build:cli": "esbuild src/bin/cli.ts --platform=node --target=node16 --sourcemap --packages=external --outfile=dist/bin/cli.js",
    "build:ui": "rm -rf dist/ui/* && node esbuild.mjs",
    "dev": "node esbuild-serve.mjs",
    "prepare": "husky install",
    "prepack": "npm run build:cli && npm run build:ui"
  },
  "bin": {
    "blog-builder": "./dist/bin/cli.js"
  },
  "devDependencies": {
    "@chialab/esbuild-plugin-html": "^0.17.2",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "esbuild": "^0.17.6",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.1",
    "normalize.css": "^8.0.1",
    "prettier": "^2.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier -w"
    ],
    "**/*.{json,css,scss,md}": [
      "prettier -w"
    ]
  },
  "dependencies": {
    "@sinclair/typebox": "^0.25.21",
    "conf": "^10.0.0",
    "ethers": "^5.6.8",
    "meow": "^11.0.0"
  }
}
