{
  "name": "contracts",
  "license": "MIT",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "hardhat test",
    "compile": "rm -rf typechain-types artifacts cache && hardhat compile && prettier -w typechain-types && hardhat flat > typechain-types/raw.sol && rm -rf ../src/contracts/* && cp -R typechain-types/* ../src/contracts && ts-node scripts/backupABI.ts && mkdir ../src/contracts/versions && cp -R versions/* ../src/contracts/versions",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network mumbai",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network matic",
    "migrate:testnet": "hardhat run scripts/migrate.ts --network mumbai",
    "migrate:mainnet": "hardhat run scripts/migrate.ts --network matic",
    "fanCount:testnet": "hardhat run scripts/getFanCount.ts --network mumbai",
    "fanCount:mainnet": "hardhat run scripts/getFanCount.ts --network matic",
    "verify:testnet": "hardhat verify --network mumbai",
    "verify:mainnet": "hardhat verify --network matic"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.0.4",
    "@nomiclabs/hardhat-solhint": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.6.0",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.8",
    "hardhat": "^2.9.7",
    "hardhat-gas-reporter": "^1.0.8",
    "p-map": "^4.0.0",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.8.1",
    "typechain": "^8.0.0",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "p-retry": "^4.6.2"
  }
}
